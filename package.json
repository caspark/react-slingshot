{
  "name": "caspar-react-slingshot",
  "version": "3.0.1",
  "description": "Starter kit for creating apps with React and Redux",
  "config": {
    "frontend_port": 3000,
    "backend_port": 3001
  },
  "scripts": {
    "prestart": "npm-run-all --parallel remove-dist lint:tools",
    "start": "npm-run-all --parallel test:watch serve:front-dev serve:back-dev",
    "serve:back-dev": "nodemon --quiet --watch src/back --exec babel-node -- src/back/index.js $npm_package_config_backend_port",
    "serve:front-dev": "babel-node node_modules/.bin/webpack-dev-server",
    "start:dist": "npm run build && cd dist && npm run serve:dist",
    "serve:dist": "node index.js $npm_package_config_frontend_port",
    "remove-dist": "rimraf ./dist",
    "prebuild": "npm run remove-dist && mkdir -p dist/assets",
    "build": "npm-run-all --parallel build:back build:html build:front build:packages",
    "build:back": "NODE_ENV=production babel src/back/index.js > dist/index.js",
    "build:html": "babel-node tools/buildHtml.js",
    "build:front": "NODE_ENV=production babel-node node_modules/.bin/webpack --progress",
    "build:packages": "npm shrinkwrap && mv npm-shrinkwrap.json dist/ && cp package.json dist/ && npm install --prefix dist/ --production",
    "docker:build": "npm run build && cp Dockerfile dist/ && docker build -t $npm_package_name dist/",
    "docker:run": "docker run --rm -it --name $npm_package_name $npm_package_name",
    "docker:ip": "docker inspect --format '{{ .NetworkSettings.IPAddress }}' $npm_package_name",
    "lint:tools": "eslint webpack.config.js tools",
    "test": "mocha tools/testSetup.js src/**/*.spec.js --reporter progress",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "connect-history-api-fallback": "1.2.0",
    "express": "4.13.4",
    "object-assign": "4.0.1",
    "react": "15.0.1",
    "react-dom": "15.0.1",
    "react-redux": "4.4.5",
    "react-router": "2.2.4",
    "redux": "3.4.0"
  },
  "devDependencies": {
    "babel-cli": "6.7.5",
    "babel-core": "6.7.6",
    "babel-eslint": "6.0.2",
    "babel-loader": "6.2.4",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.5.0",
    "chai": "3.5.0",
    "cheerio": "0.20.0",
    "colors": "1.1.2",
    "cross-env": "1.0.7",
    "css-loader": "0.23.1",
    "enzyme": "2.2.0",
    "eslint": "2.8.0",
    "eslint-loader": "1.3.0",
    "eslint-plugin-import": "1.4.0",
    "eslint-plugin-react": "4.3.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "mocha": "2.4.5",
    "node-sass": "3.4.2",
    "nodemon": "1.9.1",
    "npm-run-all": "1.7.0",
    "react-addons-test-utils": "15.0.1",
    "rimraf": "2.5.2",
    "sass-loader": "3.2.0",
    "sinon": "1.17.3",
    "sinon-chai": "2.8.0",
    "style-loader": "0.13.1",
    "webpack": "1.13.0",
    "webpack-dev-server": "1.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caspark/react-slingshot"
  }
}
